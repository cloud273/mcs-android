<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:padding="@dimen/margin">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/infoBtn"
            android:layout_marginEnd="@dimen/offset">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleTV"
                tools:text="Title" android:textSize="@dimen/small_text_size" android:textStyle="italic"/>
        <TextView
                tools:text="Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/detailTV"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="italic" android:textColor="@android:color/black"/>
    </LinearLayout>
    <Button
            android:layout_width="31dp"
            android:layout_height="31dp" android:id="@+id/infoBtn"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@mipmap/info_icon"/>
</androidx.constraintlayout.widget.ConstraintLayout>