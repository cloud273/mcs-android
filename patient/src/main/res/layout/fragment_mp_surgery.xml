<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context="com.cloud273.patient.fragment.health.MPSurgeryFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            tools:ignore="HardcodedText">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical" android:gravity="center_horizontal"
                      android:padding="@dimen/margin">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/offset">

                <com.cloud273.localization.CLTextInputEditText
                        android:id="@+id/nameTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:hint="Surgery information"
                        android:inputType="textCapWords"
                        android:textSize="@dimen/normal_text_size"
                        app:lHint="Surgery_information"
                        tools:targetApi="o" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/offset">

                <com.cloud273.localization.CLTextInputEditText
                        android:id="@+id/dateTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:hint="Time"
                        android:inputType="date"
                        android:textSize="@dimen/normal_text_size"
                        app:lHint="Time"
                        tools:targetApi="o" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/noteLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/offset">

                <com.cloud273.localization.CLTextInputEditText
                        android:id="@+id/noteTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:hint="Note"
                        android:inputType="textCapSentences"
                        android:textSize="@dimen/normal_text_size"
                        app:lHint="Note"
                        tools:targetApi="o" />

            </com.google.android.material.textfield.TextInputLayout>

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/offset" />

            <com.cloud273.localization.CLButton
                    android:text="Submit"
                    app:lText="Submit"
                    android:layout_width="match_parent"
                    android:id="@+id/updateBtn"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_color"
                    android:background="@color/blue_color"
                    android:layout_marginTop="@dimen/offset"
                    android:textSize="@dimen/small_text_size"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>